@model Project2.Models.Package
<div class="modal fade" id="AddPackageModal" tabindex="-1" role="dialog" aria-labelledby="AddPackageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form class="AddPackage  p-4 justify-content-center align-items-center">
                <div class="modal-header">
                    <h5 class="modal-title" id="AddUserModalLabel">Adding a new package</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-journal-code"></i>
                            </span>
                            <input type="text" class="form-control track-number" placeholder="track number" asp-for="TrackNumber" minlength="5" maxlength="20" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-geo-fill"></i>
                            </span>
                            <input type="text" class="form-control start-point" placeholder="start point" asp-for="StartingPoint" minlength="1" maxlength="20" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-pin-map-fill"></i>
                            </span>
                            <input type="text" class="form-control end-point" placeholder="end point" asp-for="EndPoint" minlength="1" maxlength="20" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-geo-alt-fill"></i>
                            </span>
                            <input type="text" class="form-control last-location" placeholder="last location" asp-for="LastLocation" minlength="1" maxlength="20" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-calendar-event"></i>
                            </span>
                            <input type="text" class="form-control current-state" placeholder="current state" asp-for="CurrentState" minlength="1" maxlength="20" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                Add <i class="bi bi-plus-lg"></i>
                            </button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                Back <i class="bi bi-arrow-return-left"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

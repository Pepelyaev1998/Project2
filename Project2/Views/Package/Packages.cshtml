       $(".AddPackage").submit(function(e) {
                     e.preventDefault();
                     var trackNumber = $('.track-number').val();
                     var startPoint = $('.start-point').val();
                     var endPoint = $('.end-point').val();
                     var lastLocation = $('.last-location').val();
                     var currentState = $('.current-state').val();


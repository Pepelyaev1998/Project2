@model Project2.Models.Package
@{
    ViewBag.Title = "Edit pakage";
}
<!DOCTYPE html>
<html>
<body class="bg-secondary">
    <div class="row h-100 justify-content-center align-items-center jumbotron bg-secondary">
        @using (Html.BeginForm("EditPackage", "Package", FormMethod.Post, new { @class = " p-4 justify-content-center align-items-center" }))
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <h4>Edit Package.</h4>
                        <hr />
                        <p></p>
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-journal-code"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Track number" asp-for="TrackNumber">
                                @Html.ValidationMessageFor(p=>p.TrackNumber)
                            </div>
                        </div>
                       <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-geo-fill"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Start point" asp-for="StartingPoint">
                                @Html.ValidationMessageFor(p=>p.StartingPoint)
                            </div>
                        </div>
                       <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-pin-map-fill"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="End point" asp-for="EndPoint">
                                @Html.ValidationMessageFor(p=>p.EndPoint)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-geo-alt-fill"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Last location" asp-for="LastLocation">
                                @Html.ValidationMessageFor(p=>p.LastLocation)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-event"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Current state" asp-for="CurrentState">
                                @Html.ValidationMessageFor(p=>p.CurrentState)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <button type="submit" class="btn btn-primary ">
                                    Edit <i class="bi bi-check-lg"></i>
                                </button>
                                <button type="submit" class="btn btn-primary" asp-action="Packages" asp-controller="Package" formmethod="get">
                                    Back <i class="bi bi-arrow-return-left"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


</body>
</html>
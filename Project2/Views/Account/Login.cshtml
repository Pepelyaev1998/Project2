@model Project2.ViewModels.LoginModel
<!DOCTYPE html>
<html>
<body class="bg-secondary">
    <div class="row h-100 justify-content-center align-items-center jumbotron bg-secondary">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = " p-4 justify-content-center align-items-center" }))
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <h4>Use a local account to log in.</h4>
                        <hr />
                        <div class="container">
                            <div class="row">
                                <div class="col">You must log in to access this page.</div>
                            </div>
                        </div><p></p>
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope-at-fill"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                                @Html.ValidationMessageFor(u => u.Email)
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-key-fill"></i>
                                </span>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                                @Html.ValidationMessageFor(u => u.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <button type="submit" class="btn btn-primary ">
                                    Sign in <i class="bi bi-box-arrow-in-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


</body>
</html>


